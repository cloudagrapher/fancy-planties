/* Modal System */
.modal-overlay {
  position: fixed;
  inset: 0;
  z-index: var(--z-modal-backdrop);
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: end;
  justify-content: center;
  padding: var(--space-4);
}

@media (min-width: 640px) {
