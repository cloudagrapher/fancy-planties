{
  "name": "fancy-planties",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:docker": "CYPRESS_INSTALL_BINARY=0 next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:vscode": "jest --config=jest.vscode.config.js --no-coverage",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:performance": "jest --verbose --detectOpenHandles",
    "test:parallel": "jest --maxWorkers=4",
    "test:serial": "jest --maxWorkers=1",
    "test:setup": "node scripts/setup-test-environment.js setup",
    "test:validate": "node scripts/setup-test-environment.js validate",
    "test:clean": "node scripts/setup-test-environment.js clean",
    "test:report": "node scripts/setup-test-environment.js report",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:component": "cypress run --component",
    "test:component:open": "cypress open --component",
    "test:all": "npm run test:ci && npm run test:e2e",
    "db:generate": "drizzle-kit generate",
    "db:generate:local": "DRIZZLE_ENV=local drizzle-kit generate",
    "db:generate:prod": "DRIZZLE_ENV=production drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "DRIZZLE_ENV=local drizzle-kit migrate",
    "db:migrate:prod": "DRIZZLE_ENV=production drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:push:local": "DRIZZLE_ENV=local drizzle-kit push",
    "db:push:prod": "DRIZZLE_ENV=production drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "DRIZZLE_ENV=local drizzle-kit studio",
    "db:studio:prod": "DRIZZLE_ENV=production drizzle-kit studio",
    "db:setup": "tsx scripts/db-setup.ts",
    "db:init:docker": "node scripts/db-init-docker.js",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:staging": "ENVIRONMENT=staging ./scripts/deploy-production.sh",
    "deploy:rollback": "./scripts/deploy-production.sh rollback",
    "deploy:status": "./scripts/deploy-production.sh status",
    "deploy:health": "./scripts/deploy-production.sh health",
    "backup:create": "./scripts/backup.sh",
    "backup:restore": "./scripts/restore.sh",
    "db:seed": "DATABASE_URL=\"postgresql://postgres:postgres@localhost:5433/fancy_planties\" npx tsx scripts/seed-plants.ts",
    "db:seed:local": "DRIZZLE_ENV=local npx tsx scripts/seed-plants.ts",
    "db:verify-email-schema": "node scripts/verify-email-schema.js",
    "db:setup-email-verification": "npx tsx scripts/setup-email-verification.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@lucia-auth/adapter-postgresql": "^3.1.2",
    "@tanstack/react-query": "^5.87.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "csv-parse": "^6.1.0",
    "drizzle-orm": "^0.44.5",
    "fuse.js": "^7.1.0",
    "lodash-es": "^4.17.21",
    "lucia": "^3.2.2",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-pwa": "^5.6.0",
    "oslo": "^1.2.1",
    "postgres": "^3.4.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "resend": "^6.0.3",
    "server-only": "^0.0.1",
    "uuid": "^12.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@cypress/webpack-dev-server": "^5.1.1",
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cypress": "^15.1.0",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "jest-junit": "^16.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5"
  }
}
