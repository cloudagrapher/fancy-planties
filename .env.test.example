# Test Environment Configuration
# Copy this file to .env.test.local and update with your test database credentials

# Test Database Configuration
# Use a separate test database to avoid affecting development data
TEST_DATABASE_URL=postgresql://postgres:your_test_password@localhost:5432/fancy_planties_test

# Test User Configuration (optional)
# If not set, seed scripts will use default password 'password123'
TEST_USER_PASSWORD=your_test_password_here

# Application Configuration (for testing)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Configuration (for testing - use test mode)
RESEND_API_KEY=your_resend_test_api_key
FROM_EMAIL=test@example.com
FROM_NAME=Fancy Planties Test

# Security Configuration (for testing)
DISABLE_SECURE_COOKIES=true

# AWS S3 Configuration (for testing - optional)
AWS_REGION=us-east-1
AWS_S3_BUCKET=fancy-planties-test
AWS_API_ENDPOINT=http://localhost:3001
NEXT_PUBLIC_AWS_API_ENDPOINT=http://localhost:3001

# Notes:
# - Always use a separate test database
# - Never commit .env.test.local to version control
# - Test credentials should be different from production
# - Set NODE_ENV=test when running tests
