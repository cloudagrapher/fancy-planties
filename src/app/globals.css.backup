/* ==========================================================================
   PERFORMANCE OPTIMIZATIONS
   ========================================================================== */

/* Critical CSS - Above the fold content */
.critical-content {
  /* Optimize for initial render */
  contain: layout style paint;
  will-change: auto;
}

/* Efficient selectors - avoid deep nesting */
.perf-optimized {
