  background: linear-gradient(135deg, var(--color-salmon-50) 0%, var(--color-salmon-100) 100%);
  border-color: var(--color-salmon-200);
  box-shadow: var(--shadow-salmon);
}

.card--lavender {
  background: linear-gradient(135deg, var(--color-lavender-50) 0%, var(--color-lavender-100) 100%);
  border-color: var(--color-lavender-200);
