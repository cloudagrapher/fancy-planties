# Local Development Environment Configuration
# Copy this file to .env.local and update with your credentials
# Never commit .env.local to version control!

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/fancy_planties

# Test Database Configuration (for running tests locally)
TEST_DATABASE_URL=postgresql://postgres:your_password@localhost:5432/fancy_planties_test

# Test User Configuration (optional - for seed scripts)
# If not set, seed scripts will use default password 'password123'
TEST_USER_PASSWORD=your_custom_test_password

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_PORT=3000

# Email Configuration
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Fancy Planties

# Security Configuration
# Note: Secure cookies are automatically determined by NODE_ENV
# - In production (NODE_ENV=production): Secure cookies are ALWAYS enabled
# - In development (NODE_ENV=development): Secure cookies are disabled for local HTTP
# This behavior cannot be overridden for security reasons.

# AWS S3 Configuration (for image storage)
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_API_ENDPOINT=https://your-api-endpoint.execute-api.us-east-1.amazonaws.com
NEXT_PUBLIC_AWS_API_ENDPOINT=https://your-api-endpoint.execute-api.us-east-1.amazonaws.com

# CloudFront Configuration (for image delivery)
NEXT_PUBLIC_CLOUDFRONT_DOMAIN=cdn.yourdomain.com
CLOUDFRONT_PUBLIC_KEY_ID=YOUR_KEY_ID

# AWS Credentials (for CDK deployment)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
CDK_DEFAULT_ACCOUNT=your_account_id
CDK_DEFAULT_REGION=us-east-1

# Important Notes:
# 1. Never commit this file with real credentials
# 2. Use strong, unique passwords for all services
# 3. Rotate credentials regularly
# 4. Use separate credentials for development and production
