}

/* Card Components */
.card-header {
  padding: var(--space-6);
  border-bottom: 1px solid var(--color-neutral-200);
  background-color: var(--color-neutral-50);
}

.card-body {
  padding: var(--space-6);
}

.card-footer {
  padding: var(--space-6);
  border-top: 1px solid var(--color-neutral-200);
  background-color: var(--color-neutral-50);
}

/* Plant Card Specific */
.plant-card {
  width: 100%;
  max-width: 20rem; /* 320px */
  cursor: pointer;
  touch-action: manipulation;
  transition: all var(--duration-200) var(--ease-out);
}

.plant-card:hover {
  transform: translateY(-2px) scale(1.02);
  box-shadow: var(--shadow-lg);
}

.plant-card-image {
  width: 100%;
  height: 8rem; /* 128px */
  object-fit: cover;
}

.plant-card-content {
  padding: var(--space-4);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.plant-card-title {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-neutral-800);
  line-height: var(--leading-tight);
}

.plant-card-subtitle {
  font-size: var(--text-sm);
  color: var(--color-neutral-600);
  line-height: var(--leading-normal);
}

.plant-card-status {
  display: inline-flex;
  align-items: center;
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-full);
  font-size: var(--text-xs);
  font-weight: var(--font-medium);
}

.plant-card-status--healthy {
  background-color: var(--color-mint-100);
  color: var(--color-mint-700);
}

.plant-card-status--needs-care {
  background-color: var(--color-salmon-100);
  color: var(--color-salmon-700);
}

.plant-card-status--overdue {
  background-color: var(--color-error);
  color: white;
}

/* ===== MOBILE-FIRST NAVIGATION SYSTEM ===== */

/* Bottom Navigation */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: var(--z-fixed);
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(12px);
  border-top: 1px solid var(--color-neutral-200);
  padding-bottom: env(safe-area-inset-bottom);
  height: calc(64px + env(safe-area-inset-bottom));
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
}

.bottom-nav-container {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 64px;
  padding: 0 var(--space-4);
  max-width: 28rem; /* 448px - optimal for mobile */
  margin: 0 auto;
}

.bottom-nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-3);
  border-radius: var(--radius-xl);
  transition: all var(--duration-200) var(--ease-out);
  min-height: var(--touch-target-comfortable);
  min-width: var(--touch-target-comfortable);
  touch-action: manipulation;
  user-select: none;
  text-decoration: none;
  position: relative;
}

.bottom-nav-item--active {
  background-color: var(--color-mint-100);
  color: var(--color-mint-600);
  transform: scale(1.05);
}

.bottom-nav-item--inactive {
  color: var(--color-neutral-500);
}

.bottom-nav-item--inactive:hover {
  color: var(--color-neutral-700);
  background-color: var(--color-neutral-100);
}

.bottom-nav-item--pressed {
  transform: scale(0.95);
  background-color: var(--color-neutral-100);
}

.bottom-nav-icon {
  width: 1.5rem; /* 24px */
  height: 1.5rem;
  margin-bottom: var(--space-1);
  font-size: 1.5rem;
  transition: transform var(--duration-200) var(--ease-out);
}

.bottom-nav-item--active .bottom-nav-icon {
  transform: scale(1.1);
}

.bottom-nav-label {
  font-size: var(--text-xs);
  font-weight: var(--font-medium);
  line-height: var(--leading-tight);
  transition: font-weight var(--duration-200) var(--ease-out);
}

.bottom-nav-item--active .bottom-nav-label {
  font-weight: var(--font-semibold);
}

.bottom-nav-badge {
  position: absolute;
  top: var(--space-2);
  right: var(--space-2);
  width: 1.25rem; /* 20px */
  height: 1.25rem;
  background-color: var(--color-error);
  color: white;
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: pulse-soft var(--duration-1000) var(--ease-in-out) infinite;
  box-shadow: 0 2px 4px rgba(252, 165, 165, 0.4);
}

/* Dark mode support for navigation */
@media (prefers-color-scheme: dark) {
  .bottom-nav {
    background-color: rgba(31, 41, 55, 0.95);
    border-top-color: var(--color-neutral-700);
  }
  
  .bottom-nav-item--active {
    background-color: rgba(52, 211, 153, 0.2);
    color: var(--color-mint-300);
  }
  
  .bottom-nav-item--inactive {
    color: var(--color-neutral-400);
  }
  
  .bottom-nav-item--inactive:hover {
    color: var(--color-neutral-200);
    background-color: rgba(75, 85, 99, 0.5);
  }
}

/* ===== MODAL SYSTEM ===== */

/* Modal Overlay */
.modal-overlay {
  position: fixed;
  inset: 0;
  z-index: var(--z-modal-backdrop);
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: end;
  justify-content: center;
  padding: var(--space-4);
  animation: fade-in var(--duration-300) var(--ease-out) forwards;
}

/* Desktop: center modals */
@media (min-width: 640px) {
  .modal-overlay {
    align-items: center;
    padding: var(--space-6);
  }
}

/* Modal Content */
.modal-content {
  background-color: white;
  border-radius: var(--radius-3xl) var(--radius-3xl) 0 0;
  width: 100%;
  max-width: 28rem; /* 448px */
  max-height: 85vh;
  overflow: hidden;
  box-shadow: var(--shadow-2xl);
  animation: slide-up var(--duration-300) var(--ease-out) forwards;
  transform: translateY(100%);
}

/* Desktop: rounded corners and centered */
@media (min-width: 640px) {
  .modal-content {
    border-radius: var(--radius-2xl);
    max-width: 32rem; /* 512px */
    max-height: 90vh;
    animation: scale-in var(--duration-300) var(--ease-spring) forwards;
    transform: scale(0.95);
  }
}

/* Large modals for complex content */
.modal-content--large {
  max-width: 48rem; /* 768px */
}

@media (min-width: 1024px) {
  .modal-content--large {
    max-width: 64rem; /* 1024px */
  }
}

/* Modal Header */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-6);
  border-bottom: 1px solid var(--color-neutral-200);
  background-color: var(--color-neutral-50);
}

.modal-title {
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--color-neutral-800);
  line-height: var(--leading-tight);
}

.modal-close {
  padding: var(--space-2);
  border-radius: var(--radius-lg);
  color: var(--color-neutral-500);
  background-color: transparent;
  border: none;
  cursor: pointer;
  transition: all var(--duration-200) var(--ease-out);
  min-height: var(--touch-target-min);
  min-width: var(--touch-target-min);
  display: flex;
  align-items: center;
  justify-content: center;
  touch-action: manipulation;
}

.modal-close:hover {
  color: var(--color-neutral-700);
  background-color: var(--color-neutral-100);
}

.modal-close:active {
  transform: scale(0.95);
}

/* Modal Body */
.modal-body {
  padding: var(--space-6);
  overflow-y: auto;
  flex: 1;
}

.modal-body--no-padding {
  padding: 0;
}

/* Modal Footer */
.modal-footer {
  padding: var(--space-6);
  border-top: 1px solid var(--color-neutral-200);
  background-color: var(--color-neutral-50);
  display: flex;
  gap: var(--space-3);
  justify-content: flex-end;
}

/* Mobile: stack buttons vertically */
@media (max-width: 639px) {
  .modal-footer {
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .modal-footer .btn {
    width: 100%;
  }
}

/* Modal Tabs */
.modal-tabs {
  display: flex;
  border-bottom: 1px solid var(--color-neutral-200);
  background-color: var(--color-neutral-50);
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.modal-tabs::-webkit-scrollbar {
  display: none;
}

.tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-4) var(--space-6);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  color: var(--color-neutral-600);
  background-color: transparent;
  border: none;
  border-bottom: 2px solid transparent;
  cursor: pointer;
  transition: all var(--duration-200) var(--ease-out);
  white-space: nowrap;
  min-height: var(--touch-target-comfortable);
  touch-action: manipulation;
}

.tab:hover {
  color: var(--color-neutral-800);
  background-color: var(--color-neutral-100);
}

.tab--active {
  color: var(--color-mint-600);
  border-bottom-color: var(--color-mint-400);
  background-color: var(--color-mint-50);
}

/* Mobile: smaller tab padding */
@media (max-width: 639px) {
  .tab {
    padding: var(--space-3) var(--space-4);
    font-size: var(--text-xs);
  }
}

/* Modal Animations */
@keyframes modal-slide-up {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes modal-scale-in {
  from {
    transform: scale(0.95);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes modal-fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Dark mode support for modals */
@media (prefers-color-scheme: dark) {
  .modal-content {
    background-color: var(--color-neutral-800);
    color: var(--color-neutral-100);
  }
  
  .modal-header,
  .modal-footer {
    background-color: var(--color-neutral-900);
    border-color: var(--color-neutral-700);
  }
  
  .modal-title {
    color: var(--color-neutral-100);
  }
}

/* ===== LOADING SPINNER SYSTEM ===== */

/* Base Spinner */
.spinner {
  width: 1.5rem; /* 24px */
  height: 1.5rem;
  border: 2px solid var(--color-neutral-200);
  border-top-color: var(--color-primary-500);
  border-radius: var(--radius-full);
  animation: spin var(--duration-700) linear infinite;
}

/* Spinner Sizes */
.spinner--xs {
  width: 0.75rem; /* 12px */
  height: 0.75rem;
  border-width: 1px;
}

.spinner--sm {
  width: 1rem; /* 16px */
  height: 1rem;
  border-width: 1.5px;
}

.spinner--lg {
  width: 2rem; /* 32px */
  height: 2rem;
  border-width: 3px;
}

.spinner--xl {
  width: 2.5rem; /* 40px */
  height: 2.5rem;
  border-width: 3px;
}

/* Spinner Variants */
.spinner--primary {
  border-color: var(--color-primary-200);
  border-top-color: var(--color-primary-500);
}

.spinner--secondary {
  border-color: var(--color-secondary-200);
  border-top-color: var(--color-secondary-500);
}

.spinner--white {
  border-color: rgba(255, 255, 255, 0.3);
  border-top-color: white;
}

.spinner--dark {
  border-color: var(--color-neutral-300);
  border-top-color: var(--color-neutral-700);
}

/* Loading States */
.loading-overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: var(--z-20);
  border-radius: inherit;
}

.loading-overlay--dark {
  background-color: rgba(0, 0, 0, 0.5);
}

.loading-overlay--blur {
  backdrop-filter: blur(2px);
}

/* Loading Text */
.loading-text {
  margin-left: var(--space-2);
  font-size: var(--text-sm);
  color: var(--color-neutral-600);
}

.loading-text--white {
  color: white;
}

/* ===== BADGE SYSTEM ===== */

/* Base Badge */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-1) var(--space-2);
  font-size: var(--text-xs);
  font-weight: var(--font-medium);
  border-radius: var(--radius-full);
  line-height: 1;
}

/* Badge Sizes */
.badge--sm {
  padding: var(--space-0-5) var(--space-1-5);
  font-size: 0.625rem; /* 10px */
  min-width: 1rem;
  height: 1rem;
}

.badge--lg {
  padding: var(--space-2) var(--space-3);
  font-size: var(--text-sm);
  min-width: 1.5rem;
  height: 1.5rem;
}

/* Badge Variants */
.badge--primary {
  background-color: var(--color-primary-500);
  color: white;
}

.badge--secondary {
  background-color: var(--color-secondary-500);
  color: white;
}

.badge--success {
  background-color: var(--color-success);
  color: white;
}

.badge--warning {
  background-color: var(--color-warning);
  color: var(--color-neutral-800);
}

.badge--error {
  background-color: var(--color-error);
  color: white;
}

.badge--info {
  background-color: var(--color-info);
  color: white;
}

.badge--neutral {
  background-color: var(--color-neutral-500);
  color: white;
}

/* Badge Outline Variants */
.badge--outline {
  background-color: transparent;
  border: 1px solid currentColor;
}

.badge--outline.badge--primary {
  color: var(--color-primary-600);
  border-color: var(--color-primary-300);
}

.badge--outline.badge--secondary {
  color: var(--color-secondary-600);
  border-color: var(--color-secondary-300);
}

/* Notification Badge */
.badge--notification {
  position: absolute;
  top: -0.25rem;
  right: -0.25rem;
  min-width: 1.25rem;
  height: 1.25rem;
  padding: 0;
  background-color: var(--color-error);
  color: white;
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
  border: 2px solid white;
  box-shadow: var(--shadow-sm);
  animation: pulse-soft var(--duration-1000) var(--ease-in-out) infinite;
}

/* Status Badge */
.badge--status {
  position: relative;
  padding-left: var(--space-4);
}

.badge--status::before {
  content: '';
  position: absolute;
  left: var(--space-2);
  top: 50%;
  transform: translateY(-50%);
  width: 0.5rem;
  height: 0.5rem;
  border-radius: var(--radius-full);
  background-color: currentColor;
}

/* ===== IMAGE PLACEHOLDER SYSTEM ===== */

/* Base Image Placeholder */
.image-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-neutral-200);
  color: var(--color-neutral-400);
  font-size: var(--text-2xl);
  border-radius: inherit;
  position: relative;
  overflow: hidden;
}

/* Image Placeholder Variants */
.image-placeholder--gradient {
  background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-secondary-50) 100%);
}

.image-placeholder--loading {
  background: linear-gradient(90deg, var(--color-neutral-200) 25%, var(--color-neutral-100) 50%, var(--color-neutral-200) 75%);
  background-size: 200% 100%;
  animation: shimmer var(--duration-1000) ease-in-out infinite;
}

.image-placeholder--error {
  background-color: var(--color-neutral-100);
  color: var(--color-neutral-500);
}

/* Image Placeholder Content */
.image-placeholder-icon {
  font-size: 2rem;
  opacity: 0.5;
}

.image-placeholder-text {
  font-size: var(--text-sm);
  color: var(--color-neutral-500);
  text-align: center;
  margin-top: var(--space-2);
}

/* ===== ADDITIONAL UTILITY CLASSES ===== */

/* Aspect Ratios */
.aspect-square {
  aspect-ratio: 1 / 1;
}

.aspect-video {
  aspect-ratio: 16 / 9;
}

.aspect-photo {
  aspect-ratio: 4 / 3;
}

.aspect-portrait {
  aspect-ratio: 3 / 4;
}

/* Overlay Utilities */
.overlay {
  position: absolute;
  inset: 0;
}

.overlay--dark {
  background-color: rgba(0, 0, 0, 0.5);
}

.overlay--light {
  background-color: rgba(255, 255, 255, 0.8);
}

.overlay--blur {
  backdrop-filter: blur(4px);
}

/* Gradient Utilities */
.gradient-primary {
  background: linear-gradient(135deg, var(--color-primary-400) 0%, var(--color-primary-600) 100%);
}

.gradient-secondary {
  background: linear-gradient(135deg, var(--color-secondary-400) 0%, var(--color-secondary-600) 100%);
}

.gradient-brand {
  background: linear-gradient(135deg, var(--color-primary-300) 0%, var(--color-secondary-300) 100%);
}

.gradient-soft {
  background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-secondary-50) 100%);
}

/* Text Utilities */
.text-gradient {
  background: linear-gradient(135deg, var(--color-primary-500) 0%, var(--color-secondary-500) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Interaction States */
.interactive {
  cursor: pointer;
  touch-action: manipulation;
  user-select: none;
  transition: all var(--duration-200) var(--ease-out);
}

.interactive:hover {
  transform: translateY(-1px);
}

.interactive:active {
  transform: translateY(0) scale(0.98);
}

/* Focus Utilities */
.focus-visible {
  outline: 2px solid transparent;
  outline-offset: 2px;
}

.focus-visible:focus-visible {
  outline: 2px solid var(--color-primary-400);
  outline-offset: 2px;
}

/* Truncation Utilities */
.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.truncate-2 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.truncate-3 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

/* Dark mode styles */
@media (prefers-color-scheme: dark) {
  .modal-close {
    color: var(--color-neutral-400);
  }
  
  .modal-close:hover {
    color: var(--color-neutral-200);
    background-color: var(--color-neutral-700);
  }
  
  .modal-tabs {
    background-color: var(--color-neutral-900);
    border-color: var(--color-neutral-700);
  }
  
  .tab {
    color: var(--color-neutral-400);
  }
  
  .tab:hover {
    color: var(--color-neutral-200);
    background-color: var(--color-neutral-700);
  }
  
  .tab--active {
    color: var(--color-mint-300);
    background-color: rgba(52, 211, 153, 0.1);
  }
}

/* ===== LAYOUT SYSTEM ===== */

/* Container System */
.container {
  width: 100%;
  max-width: 80rem; /* 1280px */
  margin: 0 auto;
  padding: 0 var(--space-4);
}

.container--sm {
  max-width: var(--container-2xl); /* 672px */
}

.container--md {
  max-width: 48rem; /* 768px */
}

.container--lg {
  max-width: 64rem; /* 1024px */
}

/* Page Layout */
.page {
  min-height: 100vh;
  padding-bottom: calc(64px + env(safe-area-inset-bottom));
  background: linear-gradient(to bottom, var(--color-mint-50), white);
}

/* Desktop: no bottom padding */
@media (min-width: 640px) {
  .page {
    padding-bottom: 0;
  }
}

.page-header {
  padding: var(--space-6) 0;
}

.page-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

/* Grid System */
.grid-responsive {
  display: grid;
  gap: var(--space-4);
  grid-template-columns: 1fr;
}

@media (min-width: 640px) {
  .grid-responsive {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .grid-responsive {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (min-width: 1280px) {
  .grid-responsive {
    grid-template-columns: repeat(4, 1fr);
  }
}

.grid-plants {
  display: grid;
  gap: var(--space-4);
  grid-template-columns: repeat(2, 1fr);
}

@media (min-width: 640px) {
  .grid-plants {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (min-width: 1024px) {
  .grid-plants {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media (min-width: 1280px) {
  .grid-plants {
    grid-template-columns: repeat(5, 1fr);
  }
}

/* Flexbox Utilities */
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-col-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* ===== ACCESSIBILITY & MOBILE OPTIMIZATIONS ===== */

/* Enhanced Safe Area Utilities */
.safe-area-inset-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-inset-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-inset-left {
  padding-left: env(safe-area-inset-left);
}

.safe-area-inset-right {
  padding-right: env(safe-area-inset-right);
}

.safe-area-inset-all {
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
  padding-left: env(safe-area-inset-left);
  padding-right: env(safe-area-inset-right);
}

/* Margin variants */
.safe-area-margin-top {
  margin-top: env(safe-area-inset-top);
}

.safe-area-margin-bottom {
  margin-bottom: env(safe-area-inset-bottom);
}

/* Height variants for full-screen layouts */
.safe-area-height {
  height: calc(100vh - env(safe-area-inset-top) - env(safe-area-inset-bottom));
}

.safe-area-min-height {
  min-height: calc(100vh - env(safe-area-inset-top) - env(safe-area-inset-bottom));
}

/* Touch Target Utilities */
.touch-target {
  min-height: var(--touch-target-comfortable);
  min-width: var(--touch-target-comfortable);
  touch-action: manipulation;
}

.touch-target--small {
  min-height: var(--touch-target-min);
  min-width: var(--touch-target-min);
}

.touch-target--large {
  min-height: var(--touch-target-large);
  min-width: var(--touch-target-large);
}

/* Prevent text selection on interactive elements */
.no-select {
  -webkit-user-select: none;
  -moz-user-select: none;
  user-select: none;
}

/* Smooth scrolling with momentum */
.smooth-scroll {
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
}

/* Pull-to-refresh support */
.pull-refresh {
  overscroll-behavior-y: contain;
}

/* Focus indicators for accessibility */
.focus-visible {
  outline: 2px solid var(--color-mint-400);
  outline-offset: 2px;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .bottom-nav-item--active {
    background-color: var(--color-mint-600);
    color: white;
  }
  
  .modal-content {
    border: 2px solid var(--color-neutral-800);
  }
  
  .btn {
    border-width: 2px;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .bottom-nav-item,
  .modal-overlay,
  .modal-content,
  .tab,
  .plant-card {
    animation: none !important;
    transition: none !important;
  }
  
  .bottom-nav-item--active,
  .plant-card:hover {
    transform: none !important;
  }
}

.plant-card:hover {
  transform: translateY(-2px) scale(1.02);
  box-shadow: var(--shadow-lg);
}

.plant-card-image {
  width: 100%;
  height: 8rem; /* 128px */
  object-fit: cover;
  background-color: var(--color-neutral-200);
}

.plant-card-content {
  padding: var(--space-4);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.plant-card-title {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-neutral-800);
  line-height: var(--leading-tight);
}

.plant-card-subtitle {
  font-size: var(--text-sm);
  color: var(--color-neutral-600);
  line-height: var(--leading-normal);
}

.plant-card-status {
  display: inline-flex;
  align-items: center;
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-full);
  font-size: var(--text-xs);
  font-weight: var(--font-medium);
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.plant-card-status--healthy {
  background-color: var(--color-mint-100);
  color: var(--color-mint-700);
}

.plant-card-status--needs-care {
  background-color: var(--color-salmon-100);
  color: var(--color-salmon-700);
}

.plant-card-status--overdue {
  background-color: var(--color-error);
  color: white;
}

/* ===== INTERACTIVE COMPONENT SYSTEM ===== */

/* Link Styles */
.link {
  color: var(--color-primary-600);
  text-decoration: none;
  transition: all var(--duration-200) var(--ease-out);
  border-radius: var(--radius-sm);
  padding: var(--space-1) var(--space-2);
  margin: calc(-1 * var(--space-1)) calc(-1 * var(--space-2));
  display: inline-block;
}

.link:hover {
  color: var(--color-primary-700);
  background-color: var(--color-primary-50);
  text-decoration: underline;
}

.link:focus {
  outline: 2px solid var(--color-primary-400);
  outline-offset: 2px;
}

.link--muted {
  color: var(--color-neutral-600);
}

.link--muted:hover {
  color: var(--color-neutral-800);
  background-color: var(--color-neutral-100);
}

/* Badge Component */
.badge {
  display: inline-flex;
  align-items: center;
  padding: var(--space-1) var(--space-2);
  font-size: var(--text-xs);
  font-weight: var(--font-medium);
  border-radius: var(--radius-full);
  text-transform: uppercase;
  letter-spacing: 0.025em;
  line-height: 1;
}

.badge--primary {
  background-color: var(--color-primary-100);
  color: var(--color-primary-700);
}

.badge--secondary {
  background-color: var(--color-secondary-100);
  color: var(--color-secondary-700);
}

.badge--success {
  background-color: var(--color-mint-100);
  color: var(--color-mint-700);
}

.badge--warning {
  background-color: #fef3c7;
  color: #92400e;
}

.badge--error {
  background-color: #fee2e2;
  color: #dc2626;
}

.badge--neutral {
  background-color: var(--color-neutral-100);
  color: var(--color-neutral-700);
}

/* Toggle Switch */
.toggle {
  position: relative;
  display: inline-block;
  width: 3rem; /* 48px */
  height: 1.5rem; /* 24px */
  background-color: var(--color-neutral-300);
  border-radius: var(--radius-full);
  cursor: pointer;
  transition: background-color var(--duration-200) var(--ease-out);
  touch-action: manipulation;
}

.toggle:focus {
  outline: 2px solid var(--color-primary-400);
  outline-offset: 2px;
}

.toggle--checked {
  background-color: var(--color-primary-400);
}

.toggle-thumb {
  position: absolute;
  top: 2px;
  left: 2px;
  width: 1.25rem; /* 20px */
  height: 1.25rem; /* 20px */
  background-color: white;
  border-radius: 50%;
  transition: transform var(--duration-200) var(--ease-out);
  box-shadow: var(--shadow-sm);
}

.toggle--checked .toggle-thumb {
  transform: translateX(1.5rem); /* 24px */
}

/* Checkbox Styles */
.checkbox {
  position: relative;
  display: inline-flex;
  align-items: center;
  cursor: pointer;
  gap: var(--space-2);
  touch-action: manipulation;
  min-height: var(--touch-target-min);
}

.checkbox-input {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

.checkbox-box {
  width: 1.25rem; /* 20px */
  height: 1.25rem; /* 20px */
  border: 2px solid var(--color-neutral-300);
  border-radius: var(--radius-sm);
  background-color: white;
  transition: all var(--duration-200) var(--ease-out);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.checkbox:hover .checkbox-box {
  border-color: var(--color-primary-400);
}

.checkbox-input:checked + .checkbox-box {
  background-color: var(--color-primary-400);
  border-color: var(--color-primary-400);
}

.checkbox-input:focus + .checkbox-box {
  outline: 2px solid var(--color-primary-400);
  outline-offset: 2px;
}

.checkbox-checkmark {
  width: 0.75rem; /* 12px */
  height: 0.75rem; /* 12px */
  color: white;
  opacity: 0;
  transition: opacity var(--duration-200) var(--ease-out);
}

.checkbox-input:checked + .checkbox-box .checkbox-checkmark {
  opacity: 1;
}

.checkbox-label {
  font-size: var(--text-sm);
  color: var(--color-neutral-700);
  line-height: var(--leading-normal);
  cursor: pointer;
}

/* Radio Button Styles */
.radio {
  position: relative;
  display: inline-flex;
  align-items: center;
  cursor: pointer;
  gap: var(--space-2);
  touch-action: manipulation;
  min-height: var(--touch-target-min);
}

.radio-input {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

.radio-circle {
  width: 1.25rem; /* 20px */
  height: 1.25rem; /* 20px */
  border: 2px solid var(--color-neutral-300);
  border-radius: 50%;
  background-color: white;
  transition: all var(--duration-200) var(--ease-out);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.radio:hover .radio-circle {
  border-color: var(--color-primary-400);
}

.radio-input:checked + .radio-circle {
  border-color: var(--color-primary-400);
}

.radio-input:focus + .radio-circle {
  outline: 2px solid var(--color-primary-400);
  outline-offset: 2px;
}

.radio-dot {
  width: 0.5rem; /* 8px */
  height: 0.5rem; /* 8px */
  background-color: var(--color-primary-400);
  border-radius: 50%;
  opacity: 0;
  transform: scale(0);
  transition: all var(--duration-200) var(--ease-out);
}

.radio-input:checked + .radio-circle .radio-dot {
  opacity: 1;
  transform: scale(1);
}

.radio-label {
  font-size: var(--text-sm);
  color: var(--color-neutral-700);
  line-height: var(--leading-normal);
  cursor: pointer;
}

/* Select Dropdown Styles */
.select {
  position: relative;
  display: inline-block;
  width: 100%;
}

.select-input {
  width: 100%;
  padding: var(--space-3) var(--space-4);
  padding-right: var(--space-10); /* Space for arrow */
  font-size: var(--text-base);
  line-height: var(--leading-normal);
  color: var(--color-neutral-900);
  background-color: white;
  border: 1px solid var(--color-neutral-300);
  border-radius: var(--radius-lg);
  cursor: pointer;
  transition: all var(--duration-200) var(--ease-out);
  appearance: none;
  min-height: var(--touch-target-comfortable);
}

.select-input:focus {
  outline: none;
  border-color: var(--color-primary-400);
  box-shadow: 0 0 0 3px rgba(52, 211, 153, 0.1);
}

.select-arrow {
  position: absolute;
  top: 50%;
  right: var(--space-3);
  transform: translateY(-50%);
  width: 1rem;
  height: 1rem;
  color: var(--color-neutral-500);
  pointer-events: none;
  transition: transform var(--duration-200) var(--ease-out);
}

.select-input:focus + .select-arrow {
  transform: translateY(-50%) rotate(180deg);
}

/* Tab Navigation */
.tabs {
  display: flex;
  border-bottom: 1px solid var(--color-neutral-200);
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-3) var(--space-4);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  color: var(--color-neutral-600);
  background-color: transparent;
  border: none;
  border-bottom: 2px solid transparent;
  cursor: pointer;
  transition: all var(--duration-200) var(--ease-out);
  white-space: nowrap;
  min-height: var(--touch-target-comfortable);
  touch-action: manipulation;
}

.tab:hover {
  color: var(--color-primary-600);
  background-color: var(--color-primary-50);
}

.tab:focus {
  outline: 2px solid var(--color-primary-400);
  outline-offset: -2px;
}

.tab--active {
  color: var(--color-primary-600);
  border-bottom-color: var(--color-primary-400);
}

/* Pagination */
.pagination {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-1);
  margin: var(--space-6) 0;
}

.pagination-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: var(--touch-target-comfortable);
  height: var(--touch-target-comfortable);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  color: var(--color-neutral-600);
  background-color: transparent;
  border: 1px solid var(--color-neutral-300);
  border-radius: var(--radius-lg);
  cursor: pointer;
  transition: all var(--duration-200) var(--ease-out);
  text-decoration: none;
  touch-action: manipulation;
}

.pagination-item:hover:not(.pagination-item--disabled) {
  color: var(--color-primary-600);
  background-color: var(--color-primary-50);
  border-color: var(--color-primary-300);
}

.pagination-item:focus {
  outline: 2px solid var(--color-primary-400);
  outline-offset: 2px;
}

.pagination-item--active {
  color: white;
  background-color: var(--color-primary-400);
  border-color: var(--color-primary-400);
}

.pagination-item--disabled {
  color: var(--color-neutral-400);
  cursor: not-allowed;
  opacity: 0.5;
}

/* Progress Bar */
.progress {
  width: 100%;
  height: 0.5rem; /* 8px */
  background-color: var(--color-neutral-200);
  border-radius: var(--radius-full);
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, var(--color-primary-400), var(--color-primary-500));
  border-radius: var(--radius-full);
  transition: width var(--duration-300) var(--ease-out);
  position: relative;
}

.progress-bar--animated::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: progress-shimmer 2s ease-in-out infinite;
}

@keyframes progress-shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* Tooltip */
.tooltip {
  position: relative;
  display: inline-block;
}

.tooltip-content {
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  margin-bottom: var(--space-2);
  padding: var(--space-2) var(--space-3);
  font-size: var(--text-xs);
  color: white;
  background-color: var(--color-neutral-800);
  border-radius: var(--radius-md);
  white-space: nowrap;
  opacity: 0;
  visibility: hidden;
  transition: all var(--duration-200) var(--ease-out);
  z-index: var(--z-tooltip);
  pointer-events: none;
}

.tooltip-content::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 4px solid transparent;
  border-top-color: var(--color-neutral-800);
}

.tooltip:hover .tooltip-content,
.tooltip:focus .tooltip-content {
  opacity: 1;
  visibility: visible;
}

/* Spinner/Loading Indicator */
.spinner {
  width: 1.5rem; /* 24px */
  height: 1.5rem; /* 24px */
  border: 2px solid var(--color-neutral-200);
  border-top-color: var(--color-primary-400);
  border-radius: 50%;
  animation: spin var(--duration-700) linear infinite;
}

.spinner--sm {
  width: 1rem; /* 16px */
  height: 1rem; /* 16px */
  border-width: 1px;
}

.spinner--lg {
  width: 2rem; /* 32px */
  height: 2rem; /* 32px */
  border-width: 3px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Alert/Notification Component */
.alert {
  padding: var(--space-4);
  border-radius: var(--radius-lg);
  border: 1px solid;
  display: flex;
  align-items: flex-start;
  gap: var(--space-3);
  margin-bottom: var(--space-4);
}

.alert--success {
  background-color: var(--color-mint-50);
  border-color: var(--color-mint-200);
  color: var(--color-mint-800);
}

.alert--warning {
  background-color: #fef3c7;
  border-color: #fcd34d;
  color: #92400e;
}

.alert--error {
  background-color: #fee2e2;
  border-color: var(--color-error);
  color: #dc2626;
}

.alert--info {
  background-color: #dbeafe;
  border-color: #93c5fd;
  color: #1e40af;
}

.alert-icon {
  width: 1.25rem; /* 20px */
  height: 1.25rem; /* 20px */
  flex-shrink: 0;
  margin-top: 0.125rem; /* Align with text */
}

.alert-content {
  flex: 1;
}

.alert-title {
  font-weight: var(--font-semibold);
  margin-bottom: var(--space-1);
}

.alert-message {
  font-size: var(--text-sm);
  line-height: var(--leading-relaxed);
}

/* Skeleton Loading */
.skeleton {
  background: linear-gradient(
    90deg,
    var(--color-neutral-200) 25%,
    var(--color-neutral-100) 50%,
    var(--color-neutral-200) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: var(--radius-md);
}

.skeleton--text {
  height: 1rem; /* 16px */
  margin-bottom: var(--space-2);
}

.skeleton--title {
  height: 1.5rem; /* 24px */
  width: 60%;
  margin-bottom: var(--space-3);
}

.skeleton--avatar {
  width: 3rem; /* 48px */
  height: 3rem; /* 48px */
  border-radius: 50%;
}

.skeleton--button {
  height: var(--touch-target-comfortable);
  width: 6rem; /* 96px */
  border-radius: var(--radius-lg);
}

@keyframes skeleton-loading {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* Mobile-Specific Interactive Optimizations */
@media (max-width: 640px) {
  /* Increase touch targets on mobile */
  .tab {
    min-height: var(--touch-target-comfortable);
    padding: var(--space-4);
  }
  
  .pagination-item {
    width: var(--touch-target-comfortable);
    height: var(--touch-target-comfortable);
  }
  
  /* Full-width interactive elements on mobile */
  .select {
    width: 100%;
  }
  
  /* Larger tooltips on mobile */
  .tooltip-content {
    font-size: var(--text-sm);
    padding: var(--space-3) var(--space-4);
  }
}

/* Reduced Motion Support for Interactive Elements */
@media (prefers-reduced-motion: reduce) {
  .toggle-thumb,
  .checkbox-checkmark,
  .radio-dot,
  .select-arrow,
  .progress-bar,
  .spinner,
  .skeleton {
    animation: none;
    transition: none;
  }
  
  .progress-bar--animated::after {
    animation: none;
  }
}

.plant-card:hover {
  transform: translateY(-4px) scale(1.02);
  box-shadow: var(--shadow-xl);
}

.plant-card-image {
  width: 100%;
  height: 8rem; /* 128px */
  object-fit: cover;
  background-color: var(--color-neutral-100);
}

.plant-card-content {
  padding: var(--space-4);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.plant-card-title {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-neutral-800);
  line-height: var(--leading-tight);
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.plant-card-subtitle {
  font-size: var(--text-sm);
  color: var(--color-neutral-600);
  line-height: var(--leading-normal);
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.plant-card-status {
  display: inline-flex;
  align-items: center;
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-full);
  font-size: var(--text-xs);
  font-weight: var(--font-medium);
  width: fit-content;
}

.plant-card-status--healthy {
  background-color: var(--color-mint-100);
  color: var(--color-mint-700);
}

.plant-card-status--needs-care {
  background-color: var(--color-salmon-100);
  color: var(--color-salmon-700);
}

.plant-card-status--overdue {
  background-color: var(--color-error);
