}

.status-indicator--info::before {
  background-color: var(--color-info);
}

/* Landmark regions */
.landmark-main {
  outline: none;
}

.landmark-main:focus {
  outline: 2px solid var(--color-primary-400);
  outline-offset: 2px;
}

/* Interactive element states */
.interactive-element {
  cursor: pointer;
